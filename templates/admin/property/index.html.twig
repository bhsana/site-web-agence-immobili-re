{% extends 'baseAdmin.html.twig' %}
{% block title 'GÃ©rer les biens' %}
{% block body %}

    <!-- sidebar-wrapper  -->

    <div class="container-fluid">
        <h2>Tableau de bord</h2>
        <div class="col-md-9 container">
            <div class="card border-dark mb-3" style="max-width: 18rem;">
                <div class="card-header badge-danger text-center"><h5>Nombre total </h5></div>
                <div class="card-body text-danger text-center">
                    <h2>{{ countTotal }}</h2>
                </div>
            </div>
            <div class="card border-warning mb-3" style="max-width: 18rem;">
                <div class="card-header  text-center badge-warning"><h5>Biens vendus</h5></div>
                <div class="card-body text-warning text-center">
                    <h2>{{ countSold }}</h2>
                </div>
            </div>
            <div class="card border-success mb-3" style="max-width: 18rem;">
                <div class="card-header badge-success text-center"><h5>Biens non vendus</h5></div>
                <div class="card-body text-success text-center">
                    <h2>{{ countNotSold }}</h2>
                </div>
            </div>

            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Vendu</th>
                </tr>
                </thead>
                <tbody>
                {% for property in  properties %}
                    <tr>
                        <td>{{ property.title }}</td>
                        <td>{{ property.description }}</td>
                        <td>{% if (property.sold ==1) %} vendu {% else %} non vendu{% endif %}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div class="text-right">
                <h5><a href="{{ path('admin.property.list') }}">Voir plus</a></h5>
            </div>
        </div>
    </div>

    <!-- page-content" -->

{% endblock %}